{
  "manifest_version": 3,
  "name": "tab sorter",
  "homepage_url": "https://github.com/myersguo/sort-tab-chrome",
  "version": "1.0",
  "description": "Sort tabs by URL or title",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "16.png",
      "24": "24.png",
      "128": "128.png"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/index.js"
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
