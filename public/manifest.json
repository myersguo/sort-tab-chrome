{
  "manifest_version": 3,
  "name": "sort-tab-chrome",
  "version": "1.0",
  "description": "Sort tabs by URL or title",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon.jpg"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/index.js"
  },
  "icons": {
    "16": "icon.jpg"
  }
}
